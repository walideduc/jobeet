{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/alyyajobeet/css/jobs.css')}}" type="text/css" media="all" />
{% endblock %}

{% block body %}
    <div id="jobs">
        {% for category in categories %}
            <div>
                <div class="category">
                    <div class="feed">
                        <a href="">Feed</a>
                    </div>
                    <h1>{{ category.name }}</h1>
                </div>
            </div>
            <table class="jobs">
            {% for job in category.activejobs %}
                <tr class="{{ cycle(['even','odd'],loop.index) }}">
                    <td class="location">{{ job.location }}</td>
                    <td class="position">
                        <a href="{{ path('alyya_job_show',{'company':job.companySlug,'location':job.locationSlug,'position':job.positionSlug,'id':job.id}) }}"></a>
                        {{ job.position }}
                    </td>
                    <td class="company">{{ job.company }}</td>
                </tr>
            {% endfor %}
        </table>
        {% endfor %}
    </div>
{% endblock %}
